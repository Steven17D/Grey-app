<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/feeder_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/feeders_photo"/>

    <TextView
        android:id="@+id/feeder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/feeder_image"
        android:paddingTop="20dp"
        tools:text="@string/plain_text_for_preview"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feeder_name"
        android:layout_toEndOf="@id/feeder_image"
        android:paddingBottom="20dp"
        tools:text="@string/plain_text_for_preview"
        android:textSize="14sp"/>
</RelativeLayout>